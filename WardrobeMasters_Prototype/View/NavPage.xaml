<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WardrobeMasters_Prototype.NavPage">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" Spacing="0" VerticalOptions="FillAndExpand">
			<StackLayout Orientation="Vertical" Spacing="0" HorizontalOptions="FillAndExpand">
				<Image x:Name="Logo" Aspect="AspectFill" HeightRequest="150" />
			</StackLayout>
			<StackLayout Orientation="Vertical" Spacing="0" VerticalOptions="FillAndExpand" Padding="20, 10, 20, 20">
				<ListView x:Name="NavListView" HasUnevenRows="True">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ImageCell ImageSource="{Binding Image}" Text="{Binding Title}" TextColor="Gray" />
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>